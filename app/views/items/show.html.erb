<div class="item-show">
  <div class="card" style="width: 30rem;">
    <img id="card-image-top" src="<%= @item.image_url %>" alt="<% @item.name %>">
    <div class="card-body">
      <p class="card-text">
        <h3><%= @item.name %></h3>
        Description: <%= @item.description %>
        <ul>
          <li>Price: $<%= @item.price %></li>
          <li>Merchant: <%= @item.user.name %></li>
          <li>Quantity Remaining: <%= @item.inventory_qty %></li>
          <li>Average Time to Fulfill: <%= @item.average_fulfillment_time %> days.</li>
        </ul>
      <% unless @user && @user.admin? %>
        <%= button_to 'Add To Cart', carts_path(item: @item) %>
      <% end %>
    </div>
  </div>
</div>
